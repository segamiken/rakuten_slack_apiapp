<h1>楽天書籍検索</h1>

<div class="content">
	<div id="search_box">
		<%= form_tag('/', method: :get) do %>
			<%= text_field_tag :book, "",  id: "book_search", name: "title", placeholder: "タイトルを打ち込んでください", style: "width: 200px;"%>

			<button title="検索" type="submit">検索</button>
		<% end %>
	</div>

	<h2>検索結果</h2>
	<div id="book_list">
		<%= render 'book_list' %>
	</div>
</div>